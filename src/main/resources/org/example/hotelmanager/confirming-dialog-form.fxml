<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelmanager.controllers.ConfirmingDialogFormController">
   <children>
      <Label lineSpacing="5.0" prefHeight="62.0" prefWidth="222.0" text="Ви підтверджуєте видалення кімнати?&#10;Всі дані про бронювання на цю кімнату&#10;буде стерто." textAlignment="CENTER" />
      <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="confirm_btn" mnemonicParsing="false" onAction="#confirmButtonClick" text="Підтвердити" />
            <Button fx:id="cancel_btn" mnemonicParsing="false" onAction="#cancelButtonClick" text="Скасувати" />
         </children>
         <padding>
            <Insets right="20.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" />
   </padding>
</VBox>
