<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.hotelmanager.controllers.superAdmin.SuperConfirmHotelDeleteFormController">
    <padding>
        <Insets bottom="30.0"/>
    </padding>
    <Label lineSpacing="5.0" prefHeight="62.0" text="Ви підтверджуєте видалення готелю?"/>
    <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
        <padding>
            <Insets right="20.0"/>
        </padding>
        <Button fx:id="confirm_btn" mnemonicParsing="false" onAction="#confirmButtonClick" prefHeight="25.0"
                prefWidth="85.0" text="Так"/>
        <Button fx:id="cancel_btn" mnemonicParsing="false" onAction="#cancelButtonClick" text="Скасувати"/>
    </HBox>
</VBox>
