<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelmanager.controllers.superAdmin.SuperReviewsFormController">
    <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="50.0">
         <TextField fx:id="search_text_field" prefHeight="30.0" prefWidth="250.0" promptText="Пошук за користувачами або готелями" />
         <Button fx:id="delete_review_btn" disable="true" mnemonicParsing="false" onAction="#deleteReviewButtonClick" prefHeight="30.0" prefWidth="150.0" text="Видалити відгук" />
            <HBox alignment="CENTER" spacing="5.0">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Кількість відгуків: " />
                <Label fx:id="reviews_count_label" text="Label" />
            </HBox>
        </HBox>
        <ScrollPane fx:id="reviews_scroll_pane" hbarPolicy="NEVER" prefHeight="550.0" prefWidth="200.0" />
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
</AnchorPane>
