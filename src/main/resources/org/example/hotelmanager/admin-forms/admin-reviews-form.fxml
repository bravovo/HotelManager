<AnchorPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelmanager.controllers.admin.AdminReviewsFormController">
    <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="250.0">
         <TextField fx:id="search_text_field" prefHeight="30.0" prefWidth="250.0" promptText="Пошук за іменами користувачів" />
            <HBox alignment="CENTER" spacing="5.0">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Кількість відгуків про ваш готель: " />
                <Label fx:id="reviews_count_label" text="Label" />
            </HBox>
        </HBox>
        <ScrollPane fx:id="reviews_scroll_pane" hbarPolicy="NEVER" prefHeight="550.0" prefWidth="200.0" style="-fx-border-width: 0;">
            <AnchorPane />
        </ScrollPane>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
</AnchorPane>
