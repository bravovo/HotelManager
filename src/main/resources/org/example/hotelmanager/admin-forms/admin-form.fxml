<BorderPane fx:id="admin_board_pane" prefHeight="750.0" prefWidth="1350.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelmanager.controllers.admin.AdminFormController">
   <left>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="350.0" BorderPane.alignment="CENTER">
          <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="350.0">
              <VBox fx:id="profile_vbox" alignment="CENTER" prefHeight="150.0" prefWidth="100.0" spacing="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hotelis" />
