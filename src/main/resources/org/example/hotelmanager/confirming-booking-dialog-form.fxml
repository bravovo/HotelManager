<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="300.0" spacing="50.0" xmlns="http://javafx.com/javafx/17.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.hotelmanager.controllers.ConfirmingBookingDialogFormController">
   <padding>
      <Insets bottom="30.0"/>
   </padding>
   <Label text="Ви підтверджуєте видалення бронювання?"/>
   <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
      <padding>
         <Insets right="20.0"/>
      </padding>
      <Button fx:id="confirm_btn" mnemonicParsing="false" onAction="#confirmButtonClick" text="Підтвердити"/>
      <Button fx:id="cancel_btn" mnemonicParsing="false" onAction="#cancelButtonClick" text="Скасувати"/>
   </HBox>
</VBox>
