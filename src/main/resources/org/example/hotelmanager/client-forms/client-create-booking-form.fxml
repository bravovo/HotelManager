<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelmanager.controllers.client.ClientCreateBookingFormController">
   <HBox>
      <children>
         <VBox alignment="CENTER">
            <children>
               <Separator orientation="VERTICAL" prefHeight="500.0" />
            </children>
         </VBox>
         <VBox prefHeight="750.0" prefWidth="1000.0" spacing="20.0">
            <padding>
               <Insets top="30.0" />
            </padding>
            <VBox alignment="CENTER">
               <VBox fx:id="create_booking_vbox" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: Grey;">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <Label text="Створити бронювання" />
                  <VBox fx:id="checkIN_date_vbox" prefWidth="200.0">
                     <Label text="Дата заїзду" />
                     <DatePicker fx:id="checkIN_picker" />
                  </VBox>
                  <VBox fx:id="checkOUT_date_vbox">
                     <Label text="Дата виїзду" />
                     <DatePicker fx:id="checkOUT_picker" />
                  </VBox>
                  <VBox fx:id="people_count_vbox">
                     <Label text="Кількість людей" />
                     <TextField fx:id="people_count_field" />
                  </VBox>
                  <VBox fx:id="notes_vbox">
                     <Label text="Примітки" />
                     <TextArea fx:id="notes_area" prefHeight="200.0" prefWidth="200.0" />
                  </VBox>
                  <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" minHeight="50.0" prefHeight="50.0" prefWidth="200.0">
                     <Button fx:id="create_booking_btn" mnemonicParsing="false" onAction="#createBookingButtonClick" text="Створити бронювання" />
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </HBox>
               </VBox>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
               <Separator fx:id="separator" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="500.0" />
               <ScrollPane fx:id="scroll_pane" fitToHeight="true" fitToWidth="true" vbarPolicy="NEVER">
                  <content>
                     <HBox fx:id="available_rooms_hbox" alignment="CENTER" prefHeight="300.0" prefWidth="1000.0" spacing="10.0" />
                  </content>
               </ScrollPane>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </VBox>
      </children>
   </HBox>
</AnchorPane>
