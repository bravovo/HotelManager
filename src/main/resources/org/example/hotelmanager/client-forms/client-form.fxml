<BorderPane fx:id="client_border_pane" prefHeight="750.0" prefWidth="1350.0" style="-fx-background-color: white;" stylesheets="@../../../../styles/client-left-panel-styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelmanager.controllers.client.ClientFormController">
   <left>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="350.0" styleClass="left-panel" BorderPane.alignment="CENTER">
         <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="350.0">
            <VBox fx:id="profile_vbox" alignment="CENTER" prefHeight="150.0" prefWidth="100.0" spacing="40.0" styleClass="profile" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Hotelis" />
               <Label fx:id="client_label" text="Label" />
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="100.0" spacing="70.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0">
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
               <Button fx:id="create_booking_form_btn" mnemonicParsing="false" onAction="#createBookingFormButtonClick" prefHeight="36.0" prefWidth="164.0" text="Зробити бронювання">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></Button>
               <Button fx:id="my_bookings_form_btn" mnemonicParsing="false" onAction="#myBookingsFormButtonClick" prefHeight="36.0" prefWidth="164.0" text="Мої бронювання">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></Button>
            </VBox>
            <HBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <Button fx:id="settings_btn" mnemonicParsing="false" onAction="#settingsButtonClick" prefHeight="30.0" prefWidth="150.0" text="Налаштування">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></Button>
               <Button fx:id="logout_btn" alignment="CENTER" mnemonicParsing="false" onAction="#logoutButtonClick" prefHeight="30.0" prefWidth="150.0" text="Вийти з акаунта">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></Button>
            </HBox>
         </AnchorPane>
      </VBox>
   </left>
</BorderPane>
