<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="client_border_pane" prefHeight="750.0" prefWidth="1350.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelmanager.controllers.client.ClientFormController">
   <left>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="350.0">
            <VBox alignment="CENTER" prefHeight="150.0" prefWidth="100.0" spacing="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Система управління готелями" />
               <Label fx:id="hotel_label" text="Label" />
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="100.0" spacing="70.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0">
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
               <Button fx:id="create_booking_form_btn" mnemonicParsing="false" onAction="#createBookingFormButtonClick" prefHeight="30.0" prefWidth="150.0" text="Зробити бронювання" />
               <Button fx:id="my_bookings_form_btn" mnemonicParsing="false" onAction="#myBookingsFormButtonClick" prefHeight="30.0" prefWidth="150.0" text="Мої бронювання" />
            </VBox>
            <HBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <Button fx:id="profile_btn" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Профіль" />
               <Button fx:id="logout_btn" alignment="CENTER" mnemonicParsing="false" onAction="#logoutButtonClick" prefHeight="30.0" prefWidth="150.0" text="Вийти на робочий стіл" />
            </HBox>
         </AnchorPane>
      </VBox>
   </left>
</BorderPane>
